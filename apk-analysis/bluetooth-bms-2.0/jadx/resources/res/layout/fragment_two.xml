<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/common_blank"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <com.jkcq.homebike.view.NoiseboardView
            android:id="@+id/noiseboardView"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            app:bigSliceCount="14"
            app:maxValue="70"
            app:minValue="0"
            app:noiseradius="80dp"
            app:noisescaleTextSize="10sp"
            app:noiseunitText="DB"
            app:ribbonWidth="60dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <com.jkcq.homebike.view.NoiseboardView2
            android:id="@+id/speedView2"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            app:bigSliceCount="12"
            app:maxValue="300"
            app:minValue="-300"
            app:noiseradius="80dp"
            app:noisescaleTextSize="10sp"
            app:noiseunitText="DB"
            app:ribbonWidth="60dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/common_page_color"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_voltage"
            android:padding="@dimen/dp10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Voltage:0.000V"
            android:layout_weight="1"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/common_page_color"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_current"
            android:padding="@dimen/dp10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Current:0.00A"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/common_page_color"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_temp_value"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginBottom="@dimen/dp20"
        android:text="Temperature:0℃/32℉"/>
    <com.jkcq.homebike.view.TempView
        android:id="@+id/tempView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
