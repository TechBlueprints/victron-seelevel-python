<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="@dimen/dp10">
    <TextView
        android:textSize="@dimen/sp16"
        android:textColor="@color/common_text_color"
        android:id="@+id/tv_device_type_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:text="动感单车"
        android:layout_above="@+id/view_certre"
        android:fontFamily="sans-serif-medium"/>
    <View
        android:id="@+id/view_certre"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:textSize="@dimen/sp12"
        android:textColor="@color/common_rbtn_gray_color"
        android:id="@+id/tv_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:text="UYEU734736"
        android:layout_below="@+id/view_certre"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-medium"/>
    <TextView
        android:textSize="@dimen/sp11"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_conn_device"
        android:background="@drawable/shape_btn_green_small_radi_8_bg"
        android:paddingLeft="@dimen/dp8"
        android:paddingTop="@dimen/dp5"
        android:paddingRight="@dimen/dp8"
        android:paddingBottom="@dimen/dp5"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dp100"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-medium"/>
    <ImageView
        android:id="@+id/iv_device_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp15"
        android:src="@mipmap/bms_connect_device"
        android:layout_alignParentRight="true"/>
    <View
        android:background="@color/common_gray_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
