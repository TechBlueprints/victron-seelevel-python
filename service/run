#!/bin/sh
echo "*** starting dbus-seelevel ***"
exec 2>&1
. /etc/profile.d/profile.sh

# Note: Service starts immediately and handles router availability internally
# If dbus-ble-advertisements is not available, BLE scanning will be disabled
# but the service will continue to operate normally.

echo "Starting seelevel service..."
cd /data/apps/victron-seelevel-python/data
exec softlimit -d 100000000 -s 1000000 -a 100000000 python3 -u /data/apps/victron-seelevel-python/data/dbus-seelevel-service.py
